<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#4579df">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#4579df"
            app:srcCompat="@drawable/b123" />



        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="26.2sp"
            android:textColor="#ffffff"
            android:text="포인트샵" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:textSize="23.2sp"
            android:textColor="#bfbfbf"
            android:text="보유 Point :"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="200dp"
            android:textSize="23.2sp"
            android:textColor="#010000"
            android:text="\ufeff@@@P"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:background="#dedede"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeff1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="202.3dp"
                android:layout_height="311dp"
                android:orientation="vertical"
                android:layout_marginTop="18.3dp"
                android:background="@drawable/edge_gr2"
                android:layout_gravity="center"

                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="가격"
                    android:textColor="#000000"
                    android:textSize="23.2sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#4579df"
                android:textSize="23.5sp"
                android:textColor="#ffff"
                android:text="구매하기" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>