<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeff1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4579df"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="67dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#4579df"
            app:srcCompat="@drawable/b123" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:text="이용약관"
            android:textColor="#ffffff"
            android:textSize="26.2sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 동의합니다"
            android:textColor="#000000"
            android:textSize="18sp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 수집 이용을 위한 동의 "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="(필수)"
            android:textColor="#faaa1f"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/allshow"
            android:gravity="center"
            android:text="전체보기"
            android:textColor="#ffffff"
            android:textSize="13.3sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check" />

        <TextView
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="위치기반 서비스 이용약관 동의"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#faaa1f"
            android:gravity="center_horizontal"
            android:text="(필수)" />

        <Button
            android:id="@+id/button1"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/allshow"
            android:gravity="center"
            android:text="전체보기"
            android:textColor="#ffffff"
            android:textSize="13.3sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText1"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 및 마케팅 활용 동의"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="(선택)"
            android:textColor="#faaa1f"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/allshow"
            android:text="전체보기" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText2"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />


</LinearLayout>