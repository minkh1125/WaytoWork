<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#4579df">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#4579df"
            app:srcCompat="@drawable/b123" />



        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="26.2sp"
            android:textColor="#ffffff"
            android:text="회원탈퇴" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:text="가는김에를 탈퇴하면,"
            android:textColor="#000000"
            android:textSize="25.3sp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="6"
            android:minLines="1"
            android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
    설정한 모든정보가 사라지고 복구가 불가능합
    니다. "
            android:textColor="#bfbfbf"
            android:textSize="18.3sp" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="6"
            android:minLines="1"
            android:text="    가는김에를 재가입해도 자동으로 복구 되지
    않습니다."
            android:textColor="#bfbfbf"
            android:textSize="18.3sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:background="#dedede"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#eeeff1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/start_po"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:focusableInTouchMode="false"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="6"
                    android:minLines="1"
                    android:text="모든 정보를 삭제하는 것에 동의합니다."
                    android:textColor="#000"
                    android:textSize="19.3sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="375.3dp"
                android:layout_height="71.3dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#000000"
                android:textSize="23.5sp"
                android:textColor="#ffff"
                android:text="탈퇴" />


        </LinearLayout>
    </LinearLayout>




</LinearLayout>